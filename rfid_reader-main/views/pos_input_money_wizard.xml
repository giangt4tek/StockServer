<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_input_money_wizard_form" model="ir.ui.view">
        <field name="name">pos.input.money.wizard.form</field>
        <field name="model">pos.input.money.wizard</field>
        <field name="arch" type="xml">
            <form string="Nạp tiền">
                <header>
                    <button name="test_write_data" string="Nạp tiền"
                        type="object" class="btn-primary"
                         />
                </header>
                <sheet>
                    <group>
                        <field name="money"/>
                        <field name="partner_id" invisible="1"  />
                    </group>
                </sheet>
                <footer>

                    <button string="Hủy"
                    data-hotkey="x"
                    special="cancel"
                    class="btn-secondary" />
                </footer>
            </form>
        </field>
    </record>

    <!-- Actions need to be ir.actions.act_window, not ir.ui.view -->
    <record id="action_pos_input_money_wizard" model="ir.actions.act_window">
        <field name="name">Nạp tiền</field>
        <field name="res_model">pos.input.money.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_pos_input_money_wizard_form" />
        <field name="target">new</field>
    </record>
</odoo>