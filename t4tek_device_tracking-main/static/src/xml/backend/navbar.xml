<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="web.NavBar" t-inherit-mode="extension">
        <xpath expr="//nav" position="attributes">
            <t t-if="state.isSeller || state.inventory">
                <attribute name="class">o_main_navbar d-flex align-items-center position-relative</attribute>
            </t>
        </xpath>
        <xpath expr="//t[@t-call='web.NavBar.AppsMenu']" position="replace">
                <t t-if="state.isSeller || state.inventory">
                <!-- Home Button -->

                    <div class="o-dropdown dropdown o_navbar_apps_menu o-dropdown--no-caret">
                        <button t-if="homeButton" 
                        data-hotkey="h" aria-expanded="false"
                                t-att-id="homeButton.id"
                                t-att-title="homeButton.title"
                                t-on-click="homeButton.callback"
                                class="o-dropdown dropdown-toggle dropdown" style="position: relative; font-size:34px;">
                            <i t-att-class="homeButton.icon"/>
                        </button>
                    </div>
                </t>
                <t t-else="">
                    <t t-call="web.NavBar.AppsMenu">
                        <t t-set="apps" t-value="menuService.getApps()"  />
                    </t>
                </t>
        </xpath>
    </t>
</templates>