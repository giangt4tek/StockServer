<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View for stock.receipt.card -->
    <record id="view_stock_receipt_card_tree" model="ir.ui.view">
        <field name="name">stock.receipt.card.list</field>
        <field name="model">stock.receipt.card</field>
        <field name="arch" type="xml">
            <list expand="1" js_class="t4tek_stock_list_view">
                <field name="product_id" string="Sản Phẩm" />
                <field name="name" string="Mã Thẻ" />
                <field name="location_id" string="Kho Hiện Tại" />
                <field name="write_date" string="Ngày Cập Nhật" />
                <field name="state" string="Trạng Thái" widget="badge"
                decoration-success="state == 'in'"
                decoration-warning="state == 'out'" />
                <button name="action_inventory_history" type="object" class="btn btn-link text-info" icon="fa-history" string="History"/>
            </list>
        </field>
    </record>

    <!-- Form View for stock.receipt.card -->
    <record id="view_stock_receipt_card_form" model="ir.ui.view">
        <field name="name">stock.receipt.card.form</field>
        <field name="model">stock.receipt.card</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" readonly="1" />
                        <field name="receipt_id" readonly="1" />
                        <field name="product_id" readonly="1" />
                        <field name="location_id" readonly="1" />
                        <field name="write_date" readonly="1" />
                        <field name="status" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View for stock.receipt.card -->
    <record id="view_stock_receipt_card_search" model="ir.ui.view">
        <field name="name">stock.receipt.card.search</field>
        <field name="model">stock.receipt.card</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="receipt_id" />
                <field name="product_id" />
                <field name="location_id" />
                <field name="status" />
                <group expand="0" string="Group By">
                    <filter name="group_by_receipt_id" string="Phiếu Nhập"
                        context="{'group_by': 'receipt_id'}" />
                    <filter name="group_by_product_id" string="Sản Phẩm"
                        context="{'group_by': 'product_id'}" />
                    <filter name="group_by_location_id" string="Kho Hiện Tại"
                        context="{'group_by': 'location_id'}" />
                    <filter name="group_by_status" string="Trạng Thái"
                        context="{'group_by': 'status'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- Action to Open stock.receipt.card View -->
    <record id="action_stock_receipt_card" model="ir.actions.act_window">
        <field name="name">Danh sách sản phẩm</field>
        <field name="path">product_list</field>
        <field name="res_model">stock.receipt.card</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_stock_receipt_card_tree" />
        <field name="search_view_id" ref="view_stock_receipt_card_search" />
        <field name="context">{'create':0}</field>
    </record>


    <record id="action_stock_product_card_list_2tab" model="ir.actions.client">
        <field name="name">Danh sách sản phẩm</field>
        <field name="tag">t4tek.product_card_list</field>
    </record>
</odoo>