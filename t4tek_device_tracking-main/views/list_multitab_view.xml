<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_product_card_list" model="ir.ui.view">
        <field name="name">product_card_list.2tab</field>
        <field name="model">product_card_list.2tab</field>
        <field name="arch" type="xml">
            <form string="Danh sách sản phẩm">
                <sheet>
                    <!-- <separator class="fs-2" string="" /> -->
                    <notebook class="mt-4">
                        <page name="in_stock" string="Nhập kho">
                            <field name="custom_view_field" widget="parking_one_2_many_history" options="{'isIn': true,'isContact':true}" />
                        </page>
                        <page name="out_stock" string="Xuất kho">
                            <field name="custom_view_field" widget="parking_one_2_many_history" options="{'isIn': false,'isContact':true}" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_stock_receipt_card" model="ir.ui.view">
        <field name="name">product_card_list.2tab2</field>
        <field name="model">product_card_list.2tab</field>
        <field name="arch" type="xml">
            <form string="Phiếu Nhập Kho">
                <sheet>
                    <!-- <separator class="fs-2" string="" /> -->
                    <notebook class="mt-4">
                       <page name="first_input" string="Nhập lần đầu">
                            <field name="custom_view_field" widget="one_2_many_history_receipts_widget" options="{'type': 'first_input'}" />
                        </page>
                        <page name="re_input" string="Tái nhập">
                            <field name="custom_view_field" widget="one_2_many_history_receipts_widget" options="{'type': 're_input'}" />
                        </page>
                         <page name="warranty_input" string="Nhập để bảo hành">
                            <field name="custom_view_field" widget="one_2_many_history_receipts_widget" options="{'type': 'warranty_input'}" />
                        </page>
                         <page name="fisnish_good_input" string="Nhập thành phẩm">
                            <field name="custom_view_field" widget="one_2_many_history_receipts_widget" options="{'type': 'fisnish_good_input'}" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_stock_delivery_card" model="ir.ui.view">
        <field name="name">product_card_list.2tab3</field>
        <field name="model">product_card_list.2tab</field>
        <field name="arch" type="xml">
            <form string="Phiếu Xuất Kho">
                <sheet>
                    <!-- <separator class="fs-2" string="" /> -->
                    <notebook class="mt-4">
                        <page name="return_output" string="Xuất trả NCC">
                            <field name="custom_view_field" widget="one_2_many_history_delivery_widget" options="{'type': 'return_output'}" />
                        </page>
                        <page name="ware_output" string="Xuất kho khác">
                            <field name="custom_view_field" widget="one_2_many_history_delivery_widget" options="{'type': 'ware_output'}" />
                        </page>
                         <page name="sale_output" string="Xuất bán">
                            <field name="custom_view_field" widget="one_2_many_history_delivery_widget" options="{'type': 'sale_output'}" />
                        </page>
                         <page name="warranty_after_output" string="Xuất sau bảo hành">
                            <field name="custom_view_field" widget="one_2_many_history_delivery_widget" options="{'type': 'warranty_after_output'}" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_product_card_list_action" model="ir.actions.act_window">
        <field name="name">Danh sách sản phẩm</field>
        <field name="res_model">product_card_list.2tab</field>
        <field name="res_id" ref="product_card_2tab_record" />
        <field name="view_mode">form</field>
        <field name="context">{'create':0, 'delete':0, 'edit':0, 'form_view_ref':'t4tek_device_tracking.view_product_card_list'}</field>
    </record>

    <record id="view_product_card_list_action2" model="ir.actions.act_window">
        <field name="name">Phiếu Nhập Kho</field>
        <field name="res_model">product_card_list.2tab</field>
        <field name="res_id" ref="product_card_2tab_record2" />
        <field name="view_mode">form</field>
        <field name="context">{'create':0, 'delete':0, 'edit':0, 'form_view_ref':'t4tek_device_tracking.view_stock_receipt_card'}</field>
    </record>
    <record id="view_product_card_list_action3" model="ir.actions.act_window">
        <field name="name">Phiếu Xuất Kho</field>
        <field name="res_model">product_card_list.2tab</field>
        <field name="res_id" ref="product_card_2tab_record3" />
        <field name="view_mode">form</field>
        <field name="context">{'create':0, 'delete':0, 'edit':0, 'form_view_ref':'t4tek_device_tracking.view_stock_delivery_card'}</field>
    </record>
</odoo>